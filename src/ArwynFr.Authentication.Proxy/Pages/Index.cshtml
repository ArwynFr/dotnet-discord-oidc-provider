@page
@model IndexModel
@{
    Layout = "_Layout";
}

<h1>Auth</h1>

<dl>
    <dt>Authenticated</dt>
    <dd>@User.Identity?.IsAuthenticated</dd>

    <dt>Username</dt>
    <dd>@User.Identity?.Name</dd>
</dl>

<h2>Claims</h2>

<dl>
    @foreach (var claim in User.Claims)
    {
        <dt>@claim.Type</dt>
        <dd>@claim.Value</dd>
    }
</dl>
